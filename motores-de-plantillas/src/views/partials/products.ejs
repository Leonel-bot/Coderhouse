<% if (products.length) { %>
  <table class="table">
    <thead>
      <tr>
          <th scope="col">Image</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product) { %>
        <tr>
            <td><img src="<%= product.thumbnail %>" alt="" srcset="" width="30px"></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
        </tr>
        <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>No hay productos disponibles  :(</p>
<% } %> 