<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>

    <table class="table container">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody id="table_body">
            <% if (products.length) { %>
                <% products.forEach(function(product) { %>
                    <tr>
                        <td><img src="<%= product.image %>" alt="" srcset="" width="30px"></td>
                        <td>
                            <%= product.name %>
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                    </tr>
                    <% }); %>
                        <% } %>
        </tbody>
    </table>

    <div class="container">
        <h3>Chat</h3>
        <form id="chat-form">
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="message">Mensaje</label>
                <input type="text" id="message" name="message" required>
            </div>
            <button>Enviar</button>
        </form>
        <ul id="list-chat">
            <% if (chats.length) { %>
                <% chats.forEach(function(chat) { %>
                    <li>
                        <span class="chat_email"><%= chat.author.nombre %></span>
                        <span class="chat_date"><%= chat.createdAt %>:</span>
                        <span class="chat_message"><%= chat.text %></span>
                    </li>
                <% }); %>
            <% } %>
        </ul> 
    </div>
    



    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/js/socket-client.js"></script>
</body>

</html>